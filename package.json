{
  "private": true,
  "name": "kujibet",
  "version": "0.0.2",
  "workspaces": [
    "server",
    "client"
  ],
  "repository": "git@github.com:adrianromanko/kujibet.git",
  "scripts": {
    "client:build": "cd client && yarn build",
    "client:install": "cd client && yarn install",
    "server:build": "cd server && yarn build",
    "server:start": "cd server && npm run start",
    "server:install": "cd server && yarn install",
    "postinstall": "yarn client:install && yarn server:install",
    "program:build": "cd program && cargo build-bpf",
    "build": "yarn server:build && yarn client:build",
    "start": "LIVE=true npm run server:start"
  }
}
